
@{
    ViewBag.Title = "Index";
}

<div style="height:35vh" class="d-none d-lg-block"></div>
<div class="container mt-5 mt-lg-0">
    <div class="row justify-content-center text-center">
        <div class="col-lg-6 col-md-8 col-12">
            <img src="~/image/logo.png" class="img-fluid w-50">
            <form class="mt-4">
                <input class="form-control mt-3" type="text" placeholder="Enter your username" name="username" />
                <input class="form-control mt-3" type="password" placeholder="Enter your password" name="username" />
                <button type="submit" class="btn btn-primary mt-3 w-100">SIGN IN</button>
            </form>
            <div class="mt-3">
                <span><a href="@Url.Action("Forget","Auth")" style="color:blue">FORGOT YOUR PASSWORD</a></span>
                <p class="mt-2">DON'T HAVE AN ACCOUNT YET? <a href="@Url.Action("Register","Auth")" style="color:blue">REGISTER NOW</a></p>
            </div>
        </div>
    </div>
</div>
