                            <option value="region-000000002" data-country="country-000000001">Akkar</option>
                            <option value="region-000000003" data-country="country-000000001">Aley</option>
                            <option value="region-000000004" data-country="country-000000001">Baabda</option>
                            <option value="region-000000005" data-country="country-000000001">Baalbeck</option>
                            <option value="region-000000006" data-country="country-000000001">Bcharee</option>
                            <option value="region-000000007" data-country="country-000000001">Bent Jbeil</option>
                            <option value="region-000000008" data-country="country-000000001">Chouf</option>
                            <option value="region-000000009" data-country="country-000000001">Hasbaya</option>
                            <option value="region-000000010" data-country="country-000000001">Hermel</option>
                            <option value="region-000000011" data-country="country-000000001">Jbeil</option>
                            <option value="region-000000012" data-country="country-000000001">Jezzine</option>
                            <option value="region-000000013" data-country="country-000000001">Kesserwan</option>
                            <option value="region-000000014" data-country="country-000000001">Koura</option>
                            <option value="region-000000015" data-country="country-000000001">Marjayoun</option>
                            <option value="region-000000016" data-country="country-000000001">Metn</option>
                            <option value="region-000000017" data-country="country-000000001">Minnieh Dennaye</option>
                            <option value="region-000000018" data-country="country-000000001">Nabatieh</option>
                            <option value="region-000000019" data-country="country-000000001">Rachaya</option>
                            <option value="region-000000020" data-country="country-000000001">Saida</option>
                            <option value="region-000000021" data-country="country-000000001">Tripoli</option>
                            <option value="region-000000022" data-country="country-000000001">Tyre</option>
                            <option value="region-000000023" data-country="country-000000001">West Bekaa</option>
                            <option value="region-000000024" data-country="country-000000001">Zahle</option>
                            <option value="region-000000025" data-country="country-000000001">Zghorta</option>
                        </select>
                    </div>

                </div>
                <div class="row  mt-4">
                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <input type="text" class="form-control col-lg-6 w-100" placeholder="City*" />
                    </div>


                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <input type="text" class="form-control col-lg-6 w-100" placeholder="Post Code" />
                    </div>
                </div>
                <div class="col-lg-12  mt-4">
                    <button type="submit" class="w-100 btn btn-primary">SUBNIT</button>
                </div>
            </form>
        </div>
    </div>
</div>
