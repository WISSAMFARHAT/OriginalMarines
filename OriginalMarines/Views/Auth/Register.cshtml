
@{
    ViewBag.Title = "Register";
}

<div style="height:35vh" class="d-none d-lg-block"></div>
<div class="container mt-5 mt-lg-0">
    <div class="row justify-content-center text-center">
        <div class="col-lg-8 col-12 mb-4">
            <h1 class="text-start">REGISTER</h1>
            <form>
                <div class="col-lg-12 mt-4">
                    <input class="form-control w-100" placeholder="EMAIL*" type="text" name="email" />
                </div>
                <div class="col-lg-12  mt-4">
                    <input class="form-control w-100" placeholder="PASSWORD*" type="password" name="pwd" />
                </div>
                <div class="col-lg-12  mt-4">
                    <input class="form-control w-100" placeholder="CONFIRM PASSWORD*" type="password" name="confirmpwd" />
                </div>
                <div class="row  mt-4">
                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <input class="form-control w-100 col-lg-6" placeholder="FIRST NAME*" type="text" name="first_name" />
                    </div>
                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <input class="form-control w-100 col-lg-6" placeholder="LAST NAME*" type="text" name="last_name" />
                    </div>
                </div>
                <div class="col-lg-12  mt-4">
                    <input class="form-control w-100" placeholder="COMPANY" type="text" name="company" />
                </div>
                <div class="row  mt-4">
                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <input class="form-control w-100 col-lg-6" placeholder="PHONR NUMBER*" type="text" name="phone" />
                    </div>
                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <input class="form-control w-100 col-lg-6" placeholder="FAX NUMBER*" type="text" name="fax" />
                    </div>
                </div>
                <div class="col-lg-12  mt-4">
                    <input class="form-control w-100" placeholder="BUILDING NAME & MORE DETAILS (FLOOR, APARTMENT, OR OTHER REFERENCES)*" type="text" name="bulding" />
                </div>
                <div class="col-lg-12  mt-4">
                    <input class="form-control w-100" placeholder="STREET NAME/NO." type="text" name="street" />
                </div>
                <div class="row  mt-4">
                    <div class="col-lg-6 mt-3 mt-lg-0">
                        <select class="form-select col-lg-6 w-100 text-black" style="border: 1px solid #ced4da">
                            <option value="1" selected>Lebanon</option>
                        </select>
                    </div>

                    <div class="col-lg-6 mt-3 mt-lg-0">
